<Window x:Class="NotificationApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Notification App" Height="300" Width="400">
    <StackPanel>
        <Button Content="Отправить сообщение" Click="SendMessage_Click" Width="200" Margin="10"/>
        <Button Content="Совершить звонок" Click="MakeCall_Click" Width="200" Margin="10"/>
        <Button Content="Отправить email" Click="SendEmail_Click" Width="200" Margin="10"/>
        <TextBlock x:Name="NotificationResult" FontSize="16" Margin="10" TextWrapping="Wrap"/>
    </StackPanel>
</Window>
