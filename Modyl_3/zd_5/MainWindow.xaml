<Window x:Class="SortingApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Sorting Application" Height="300" Width="400">
    <Grid>
        <StackPanel Margin="10">
            <TextBox Name="InputTextBox" Width="200" Height="25" Margin="0,0,0,10" />
            <Button Content="Сортировать" Width="200" Height="30" Click="SortButton_Click" />
            <ComboBox Name="SortingMethodComboBox" Width="200" Margin="0,10,0,10">
                <ComboBoxItem Content="Сортировка пузырьком" />
                <ComboBoxItem Content="Быстрая сортировка" />
            </ComboBox>
            <TextBlock Text="Отсортированные данные:" FontWeight="Bold" Margin="0,20,0,5" />
            <ListBox Name="SortedDataListBox" Height="150" />
        </StackPanel>
    </Grid>
</Window>
